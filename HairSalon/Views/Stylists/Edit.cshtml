@{
  Layout = "_Layout";
}

<div class='container'>
    <h1>Add a Stylist</h1>
    <form action='/stylists/@Model.Id/update' method='POST'>
        <div class='form-group'>
            <label for='name'>Name</label>
            <input type='text' name='name' class='form-control' value='@Model.Name' required>
        </div>
        <button type='submit' class='btn btn-success'>Update Stylist</button>
    </form>
</div>