@{
  Layout = "_Layout";
}

<div class='container'>
    <h1 class='center'>@Model.Name</h1>
    <div class='card'>
        <div class='card-body'>
            <p class='card-text'>Add description here</p>
            <a href='/clients/@Model.Id/edit' class='btn btn-info'>Edit</a>
            <form id='delete-form' action='/clients/@Model.Id/delete' method='POST'>
                <button type='submit' class='btn btn-secondary'>Delete</button>
            </form>
        </div>
    </div>
</div>